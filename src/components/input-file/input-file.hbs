<div class="file-input-container{{#if avatar}} file-input-container__avatar{{/if}}">
  {{#unless avatar}}
    <label for="file-upload" class="file-input-label">
      <div class="file-input-title{{#if file}} file-input-title__file{{/if}}">
        <span>
          {{#if file}}
          {{file}}
          {{else}}
          {{label}}
          {{/if}}
        </span>
      </div>
      <input type="file" id="file-upload" {{#if type}}accept="{{type}}" {{/if}}>
    </label>
  {{/unless}}

  {{#if avatar}}
    <img src="/src/assets/icons/default_avatar.svg" alt="Icon" class="file-input-image">
    <label for="file-upload" class=".file-input-label file-input-label__avatar">
      <div class=".file-input-title file-input-title__avatar">
        <span>{{label}}</span>
      </div>
      <input type="file" id="file-upload" {{#if type}}accept="{{type}}" {{/if}}>
    </label>
  {{/if}}
</div>