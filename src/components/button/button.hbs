<button 
  type="{{type}}" 
  class="button{{#if theme}} button__{{theme}}{{else}} button__primary{{/if}}{{#if outlined}} button__outlined{{/if}}{{#if circle}} button__circle{{/if}}"
>
  {{#if label}}
    <span class="button__label">{{label}}</span>
  {{/if}}
  <!-- TODO доработать кнопку-иконку, сделать круглой при наведении, менять цвет -->
  {{#if icon}}
    <div class="button__icon">
      <img src="{{icon}}" alt="icon" />
    </div>
  {{/if}}
</button>
